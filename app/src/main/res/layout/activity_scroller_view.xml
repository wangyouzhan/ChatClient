        android:text="show"/>

    <com.imooc.wangyouzhan.chatclient.view.ViewButton
        android:id="@+id/view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="button">

    </com.imooc.wangyouzhan.chatclient.view.ViewButton>

</LinearLayout>
